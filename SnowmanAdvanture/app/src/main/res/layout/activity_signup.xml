<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="500dp"
            android:layout_height="1000dp"
            android:tint="#83FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/signup" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="136dp"
            android:layout_height="49dp"
            android:text="SIGN UP"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#FA161515"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.102" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="124dp"
            android:layout_height="28dp"
            android:text="User name:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#F7131212"
            app:layout_constraintBottom_toTopOf="@+id/et_user"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.108"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="124dp"
            android:layout_height="28dp"
            android:text="Password:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#F50C0C0C"
            app:layout_constraintBottom_toTopOf="@+id/textView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.108"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.492" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="212dp"
            android:layout_height="29dp"
            android:text="Confirm Password:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FD0E0D0D"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.155"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.528" />

        <EditText
            android:id="@+id/et_user"
            android:layout_width="309dp"
            android:layout_height="55dp"
            android:backgroundTint="#FA0C0C0C"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#F30E0D0D"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.313"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.264" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="309dp"
            android:layout_height="55dp"
            android:backgroundTint="#F8161515"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="#FC1B1919"
            app:layout_constraintBottom_toTopOf="@+id/et_confirm_passowrd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.303"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_user" />

        <EditText
            android:id="@+id/et_confirm_passowrd"
            android:layout_width="309dp"
            android:layout_height="55dp"
            android:layout_marginBottom="168dp"
            android:backgroundTint="#F80A0A0A"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="#ED1F1C1C"
            android:textColorHighlight="#FA1A1818"
            android:textColorHint="#F01B0404"
            android:textColorLink="#FD090202"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.301"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_user"
            app:layout_constraintVertical_bias="0.908" />

        <Button
            android:id="@+id/btn_signup_confirm"
            android:layout_width="333dp"
            android:layout_height="50dp"
            android:background="#B0FFFFFF"
            android:backgroundTint="#FDF7F7"
            android:text="CONFIRM"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FA0C0B0B"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_confirm_passowrd"
            app:layout_constraintVertical_bias="0.366" />

        <TextView
            android:id="@+id/tv_user_ok"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/tv_confirm_password_ok"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/et_user"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.39" />

        <TextView
            android:id="@+id/tv_password_ok"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintStart_toEndOf="@+id/et_password"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.513" />

        <TextView
            android:id="@+id/tv_confirm_password_ok"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/et_confirm_passowrd"
            app:layout_constraintTop_toBottomOf="@+id/tv_password_ok"
            app:layout_constraintVertical_bias="0.429" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>